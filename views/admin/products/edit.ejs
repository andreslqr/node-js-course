<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./../includes/head') %>
</head>
<body class="min-h-screen">
    <%- include('./../includes/header') %>
    <main class="py-4">
        <div class="container mx-auto">
            <div class="flex justify-end">
                <button type="button" class="btn btn-outline btn-error">
                    Delete
                </button>
            </div>
            <div class="card w-full bg-base-200 shadow-xl my-4">
                <div class="card-body">
                    <form id="products-form" method="POST">
                        <%- include('./form') %>
                    </form>
                    <div class="card-actions justify-end mt-4">
                        <a href="/admin/products" class="btn">
                            Cancel
                        </a>
                        <button type="submit" form="products-form" class="btn btn-primary btn-outline">
                            Update
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('./../includes/footer') %>
</body>
</html>
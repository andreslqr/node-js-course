extends /views/layouts/app.pug

block content 
    .py-8
        .p-5.bg-indigo-200.rounded.shadow 
            form(action="/admin/add-product", method="POST")
                .flex.gap-4
                    .w-full 
                        label.text-sm.text-navy-700.font-bold(for="title")  
                        input(type="text", id="title", name="title", required, class="h-12 w-full rounded-lg border-indigo-500 indent-4 text-indigo-900 shadow-lg focus:outline-none focus:ring focus:ring-indigo-600")
                    button(type="submit", class="mt-auto h-12 min-w-[8rem] rounded-lg border-2 border-indigo-600 bg-indigo-500 text-indigo-50 shadow-lg hover:bg-indigo-600 focus:outline-none focus:ring focus:ring-indigo-600") Send

